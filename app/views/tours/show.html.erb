<div class="jumbotron">
  <h1><%= @tour.name %></h1>
  <p><%= simple_format @tour.description %></p>
  <div class="categories">
    <% @tour.categories.each do |category| %>
      <%= link_to category.name, category_tour_path(category), class: 'label label-success' %>
    <% end %>
  </div>
</div>

<% if @traced_tours %>
  <h3>Last visited</h3>
  <div class="row tours">
    <div class="col-lg-12">
      <%= render partial: 'list', locals: {tours: @traced_tours} %>
    </div>
  </div>
<% end %>