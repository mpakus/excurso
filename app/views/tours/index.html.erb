<h1>Home</h1>

<div class="tours">
  <% cache @cities do %>
    <% @cities.each do |city| %>
      <div class="row">
        <div class="col-lg-12">
          <hr/>
          <h3><%= link_to city.name, city_tour_path(city), class: 'city' %></h3>

          <ul class="tours">
            <% city.tours.published.newest.first(5).each do |tour| %>
              <li>
                <div>
                  <strong><%= link_to tour.name, tour %></strong>
                  <div class="categories">
                    <% tour.categories.each do |category| %>
                      <%= link_to category.name, category_tour_path(category), class: 'label label-primary' %>
                    <% end %>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>

        </div>

      </div>
    <% end %>
  <% end %>
</div>
