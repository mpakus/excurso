<h1>Cabinet: Tours</h1>

<%= form_for([:cabinet, @tour], class: 'form-horizontal') do |f| %>

  <%= form_errors(@tour) %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', rows: 5 %>
  </div>
  <div class="form-group">
    <%= f.label :city_id %>
    <%= f.collection_select(:city_id, City.alphabetical.all, :id, :name, {}, {class: 'form-control'} ) %>
  </div>
  <div class="form-group">
    <%= f.submit 'Save', class: 'btn btn-success' %>
  </div>

<% end %>
