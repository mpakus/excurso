<div class="row">
  <div class="col-lg-12">
    <h1>Tours</h1>

    <%= link_to '+ Create Tour', new_admin_tour_path, class: 'btn btn-success pull-right' %>

    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>City</th>
        <th>Description</th>
        <th>State</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @tours.each do |tour| %>
        <tr>
          <td><%= tour.id %></td>
          <td><%= tour.name %></td>
          <td><%= tour.city.name %></td>
          <td><%= tour.description %></td>
          <td><%= human_state(tour.state) %></td>
          <td><%= link_to 'Show', '', target: '_blank', class: 'btn btn-default' %></td>
          <td><%= link_to 'Edit', edit_admin_tour_path(tour), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Delete', [:admin, tour], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <%= paginate @tours %>

  </div>
</div>

